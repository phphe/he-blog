---
import { astroI18n } from "astro-i18n";

const { date } = Astro.props;
let dateLocale = astroI18n.langCode === "en" ? "en-us" : "zh-CN";
---

<time datetime={date.toISOString()}>
  {
    date.toLocaleDateString(dateLocale, {
      year: "numeric",
      month: "short",
      day: "numeric",
    })
  }
</time>
