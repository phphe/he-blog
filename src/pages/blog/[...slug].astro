---
import DefaultLayout from "@/layouts/DefaultLayout.astro";
import FormattedDate from "@/components/FormattedDate.astro";
import type { CollectionEntry } from "astro:content";
import { getCurrentPosts } from "@/plugins/utils";
import { astroI18n } from "astro-i18n";
astroI18n.init(Astro);

export async function getStaticPaths() {
  const posts = await getCurrentPosts();
  return posts.map((post) => ({
    params: { slug: post.slug.replace(/^\w+\//, "") }, // remove lang prefix
    props: post,
  }));
}
type Props = CollectionEntry<"blog">;

const post = Astro.props;
const { Content } = await post.render();
---

<DefaultLayout
  htmlTitle={post.data.title}
  htmlDescription={post.data.description}
>
  <div class="page-blog-post mt-14">
    <div class="post-header">
      <div class="post-title prose">
        <h1>{post.data.title}</h1>
      </div>
      <div class="post-meta mt-5">
        <small><FormattedDate date={post.data.date} /></small>
      </div>
    </div>
    <div class="post-body mt-8 text-gray-600">
      <div class="post-content prose">
        <Content />
      </div>
    </div>
    <div class="post-footer"></div>
  </div>
</DefaultLayout>

<style>
  .page-blog-post .prose {
    max-width: 800px;
  }
</style>
